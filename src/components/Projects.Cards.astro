---
const { titulo, color, link, img, text, medidas } = Astro.props;
---

<div
  class="w-auto bg-white border border-gray-200 rounded-lg shadow flex justify-center items-center transform transition-transform duration-300 hover:scale-105"
  id="projects"
>
  <a href={link} class="flex justify-center items-center" target="_blank">
    <img class=`${medidas}` src={img} alt="" />
  </a>
  <div class="p-5">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
      {titulo}
    </h5>
    <p class="mb-3 font-normal text-gray-700">
      {text}
    </p>
    <a
      href={link}
      target="_blank"
      class=`inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-${color}-700 rounded-lg hover:bg-${color}-800 focus:ring-4 focus:outline-none focus:ring-${color}-300`
    >
      Watch it
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>
